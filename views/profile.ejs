<% include ./partials/header %>

  <div class="cont">
     <div class="row">
      <div class="col-12 col-lg-3">
          <h1>Profile</h1>
          <p>Email: <%= currentUser.username %></p>
		  <br>
		  <h2>
			  Language of translation:
		  </h2>
		  <form action="/changeLanguage?_method=PUT" method="POST">
		    <select name="language" class="dropdown">
			  <option class="option" value="en">English</option>
			  <option class="option" value="es">Spanish</option>
				<option class="option" value="ru">Russian</option>
			</select> 
			  <input class="ui violet basic button" type="submit">
		  </form>
		  <br><br>
      </div>
      <div class="col-12 col-lg-9">
          <h1>Subscription</h1>
          <p>Status: Not active</p>
          <br>
		  <div class="row">
			  <div class="col-12 col-lg-4">
				  <div class="card" >
              <div class="card-body">
                <h5 class="card-title accent">Bronze</h5>
                <h6 class="card-subtitle mb-2 text-muted">subscription</h6>
                <p class="card-text">Gain access for 1 month </p>
                <p class="accent">5.99$<span class="gray">/month</span></p><br>
                <a href="#" class="card-link">Buy</a>
                
              </div>
            </div>
			  </div>
              
            <div class="col-12 col-lg-4">
				  <div class="card" >
              <div class="card-body">
                <h5 class="card-title accent">Silver</h5>
                <h6 class="card-subtitle mb-2 text-muted">subscription</h6>
                <p class="card-text">Gain access for 3 months</p>
                <p class="accent">5.09$<span class="gray">/month</span></p><br>
                <a href="#" class="card-link">Buy</a>
                
              </div>
            </div>
			  </div>
          
            <div class="col-12 col-lg-4">
				  <div class="card" >
              <div class="card-body">
                <h5 class="card-title accent">Gold</h5>
                <h6 class="card-subtitle mb-2 text-muted">subscription</h6>
                <p class="card-text">Gain access for 6 months</p>
                <p class="accent">4.99$<span class="gray">/month</span></p><br>
                <a href="#" class="card-link">Buy</a>
              </div>
            </div>
			  </div>
        
		  </div>
          
      </div>
     </div>
  </div>
    
<script>
	window.onload = function(){
		var select = document.querySelector(".dropdown");
		select.value = "<%= currentUser.language %>";
	};
</script>
