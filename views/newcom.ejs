<% include ./partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header">New Comment to <%= blog.title %> </div>
    <form class="ui form" action="/blogs/<%= blog._id %>/newcom" method="POST">
        <div class="field">
            <label>Text</label>
            <input type="text" name="comment[text]" placeholder="text">
        </div>
        <div class="field">
            <label>Author</label>
            <input type="text" name="comment[author]" placeholder="author">
        </div>
        
        <input class="ui violet basic button" type="submit">
    </form>
</div>

<% include ./partials/footer %>